<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
<div class="header">
  <div class="headerlogo">
    <%=image_tag "1_Primary_logo_on_transparent_379x63.png"%>
  </div>
  
  <div class="headerusermenu">
    <div class="dropdown">
      <ul>
        <% if signed_in? %>
          <%=image_tag @current_user.image_url, class:"headerusericon"%>
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <%= @current_user.nickname + 'さん'%>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu right" aria-labelledby="dropdownMenu1">
            <li><%= link_to 'プロフィール', current_user %></li>
            <li><%= link_to 'マイページ', current_user %></li>
            <li><%= link_to '投稿する', current_user %></li>
            <li><%= link_to 'ホーム', current_user %></li>
            <li class="divider"></li>
            <li><%= link_to 'ログアウト', signout_path, method: :delete %></li>
          </ul>
        <% else %>
          <%=image_tag "hito2.png", class:"headerusericon"%>
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <%= 'ゲストさん'%>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu right" aria-labelledby="dropdownMenu1">
            <li><%= link_to 'ログイン', signin_path %></li>
            <li><%= link_to 'アカウント作成', signup_path %></li>
            <li class="divider"></li>
            <li><%= link_to 'ホーム', signin_path %></li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<hr>

<div class="wrapper">
<%= yield %>
</div>

</body>
</html>
